{
  "name": "agent-ide",
  "version": "0.1.5",
  "description": "程式碼智能工具集 for AI Agents",
  "type": "module",
  "main": "dist/shared/index.js",
  "types": "dist/shared/index.d.ts",
  "bin": {
    "agent-ide": "./bin/agent-ide.js",
    "agent-ide-mcp": "./bin/mcp-server.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run",
    "test:watch": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest --watch",
    "test:run": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run",
    "test:memory": "NODE_OPTIONS='--expose-gc --max-old-space-size=2048 --trace-gc' npx vitest run --reporter=verbose",
    "test:coverage": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run --coverage",
    "test:single": "NODE_OPTIONS='--expose-gc --max-old-space-size=2048' npx vitest run --pool=forks --poolOptions.forks.singleFork=true",
    "test:failed": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run --reporter=dot",
    "test:bail": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run --bail=1",
    "test:e2e": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run --config=vitest.e2e.config.ts",
    "test:e2e:watch": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest --watch --config=vitest.e2e.config.ts",
    "test:e2e:coverage": "NODE_OPTIONS='--expose-gc --max-old-space-size=4096' npx vitest run --coverage --config=vitest.e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e",
    "test:all:coverage": "npm run test:coverage && npm run test:e2e:coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.{ts,js}' --fix",
    "review:test": "codex \"review 所有測試 code, 把修改建議更新到 review.md\""
  },
  "keywords": [
    "agent-ide",
    "ast",
    "parser",
    "typescript",
    "code-intelligence"
  ],
  "author": "Agent IDE Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vivalalova/agent-ide.git"
  },
  "homepage": "https://github.com/vivalalova/agent-ide",
  "bugs": {
    "url": "https://github.com/vivalalova/agent-ide/issues"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^2.1.9",
    "chokidar": "^4.0.3",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "memfs": "^4.38.2",
    "tsx": "^4.20.5",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "dependencies": {
    "commander": "^12.1.0",
    "glob": "^11.0.3",
    "web-tree-sitter": "^0.25.10",
    "typescript": "^5.0.0",
    "@babel/generator": "^7.28.3",
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4"
  }
}
